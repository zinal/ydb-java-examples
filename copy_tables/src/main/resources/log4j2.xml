<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="io.netty" level="warn" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="io.grpc.netty" level="warn" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="org.testcontainers" level="warn" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="tech.ydb.core.grpc" level="warn" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="tech.ydb.table" level="warn" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="tech.ydb.table.SessionRetryContext" level="warn" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="tech.ydb.table.Session" level="warn" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Root level="info" >
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>